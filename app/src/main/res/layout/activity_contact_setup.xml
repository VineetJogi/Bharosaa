<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/txtContactTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- Short description -->
        <TextView
            android:id="@+id/txtContactSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_subtitle"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="18dp" />

        <!-- Contacts display area (multi-line) -->
        <TextView
            android:id="@+id/txtContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_contacts_added"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="18dp" />

        <!-- Buttons: Pick contact and Continue -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnPickContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pick_contact"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/desc_pick_contact" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/continue"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:contentDescription="@string/desc_continue" />
        </LinearLayout>

        <!-- Small note at bottom -->
        <TextView
            android:id="@+id/txtContactsNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_note"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="18dp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>

