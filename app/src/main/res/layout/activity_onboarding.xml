<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Optional App Illustration -->
        <ImageView
            android:id="@+id/imgOnboard"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_onboarding" />
        <!-- replace with your drawable or remove
            android:contentDescription="@string/onboarding_image_desc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" -->

        <!-- Big title -->
        <TextView
            android:id="@+id/txtOnboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Short subtitle / explanation -->
        <TextView
            android:id="@+id/txtOnboardSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_subtitle"
            android:textSize="18sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="24dp" />

        <!-- Large Start button for senior users -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textSize="20sp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>

